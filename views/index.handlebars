<div class='jumbotron'>
    <div class='container-fluid text-info text-center'>
        <h1 class="display-2">RATE THE NEWS!</h1>
        <h3>
            <i>Read, Comment, and Save</i>
        </h3>
    </div>
</div>
<div class='container'>
    <div class='row' id='articles'>
        {{#each result}}
        <div class='card w-100' data-id='{{article_id}}'>
            <div class='card-body'>
                <h5 class='card-title text-info'>{{title}}</h5>
                <p class='card-text text-secondary'>{{summary}}</p>
                <!-- <button class='btn btn-info' id='saveArticle'>Save Article</button> -->
                <!-- button trigger modal -->
                <button class='btn btn-warning' id='articleNote' data-toggle='modal' data-target='#artnote{{article_id}}' data-id='{{article_id}}'>Article Notes</button>
                <!-- modal -->
                <div class="modal fade" id="artnote{{article_id}}" tabindex="-1" role="dialog" aria-labelledby="modalCenterTile" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="artnoteTitle">Notes: {{title}}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form method='post' action='/articles/{{article_id}}'>
                                <div class="modal-body">
                                    <div class='form-group'>
                                        <textarea class='form-control' id='artnoteText{{article_id}}' name='body' rows='5'></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary" data-id='{{article_id}}' id='savenote'>Save Note</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class='row' id='notes'></div>
</div>